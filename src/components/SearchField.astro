---
import Search from "astro-pagefind/components/Search";
---

<Search id="search1" className="pagefind-ui mb-10" uiOptions={{ showImages: false }} />

<style is:global>
    .pagefind-ui .pagefind-ui__form::before {
        top: 50%;
        translate: 0 -50%;
        left: 10px;
    }

    .pagefind-ui .pagefind-ui__search-clear {
        height: 35px;
        top: 50%;
        translate: 0 -50%;
        background-color: hsl(var(--background));
        color: hsl(var(--foreground));
        font-size: 1rem;
    }

    .pagefind-ui .pagefind-ui__search-input {
        height: auto;
        background-color: hsl(var(--background));
        font-size: 1rem;
        font-weight: normal;
        padding-block: 8px;
        padding-inline-start: 36px;
        border-color: hsl(var(--border));
    }

    .pagefind-ui .pagefind-ui__search-input:hover,
    .pagefind-ui .pagefind-ui__search-input:focus-visible {
        --tw-ring-offset-shadow: var(--tw-ring-inset) 0 0 0 var(--tw-ring-offset-width) var(--tw-ring-offset-color);
        --tw-ring-shadow: var(--tw-ring-inset) 0 0 0 calc(1px + var(--tw-ring-offset-width)) hsl(var(--ring));
        box-shadow: var(--tw-ring-offset-shadow), var(--tw-ring-shadow), var(--tw-shadow, 0 0 #0000);
        outline: none;
        border-color: transparent;
    }

    .pagefind-ui .pagefind-ui__drawer:not(.pagefind-ui__hidden) {
        max-height: 350px;
        position: absolute;
        left: 0;
        right: 0;
        margin-top: 4px;
        z-index: 9999;
        padding: 0 2em 1em;
        overflow-y: auto;
        border-bottom-right-radius: var(--radius);
        border-bottom-left-radius: var(--radius);
        border-radius: var(--radius);
        background-color: hsl(var(--secondary));
    }

    .pagefind-ui__result-excerpt mark {
        background-color: hsl(var(--primary));
        color: hsl(var(--foreground));
    }

    .pagefind-ui .pagefind-ui__result-inner p.pagefind-ui__result-title a.pagefind-ui__result-link {
        text-decoration: underline;
        text-decoration-color: hsl(var(--primary));
        text-underline-offset: 4px;
        transition: 200ms ease-in-out;
    }

    .pagefind-ui .pagefind-ui__result-inner p.pagefind-ui__result-title a.pagefind-ui__result-link:hover,
    .pagefind-ui .pagefind-ui__result-inner p.pagefind-ui__result-title a.pagefind-ui__result-link:focus-visible {
        color: hsl(var(--primary));
        text-decoration-color: hsl(var(--foreground));
    }
</style>
