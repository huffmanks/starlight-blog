---
import { Code } from "astro-expressive-code/components";

interface Props {
    title?: string;
    code: string;
    lang?: string;
}

const { title, code, lang = "shell" } = Astro.props;
---

<Code title={title} code={code} lang={lang} showLineNumbers={false} frame={title ? "auto" : "none"} />
